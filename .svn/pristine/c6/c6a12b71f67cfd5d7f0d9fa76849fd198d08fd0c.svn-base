<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD0D0D0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:padding="10dp">


        <ImageView
            android:id="@+id/iv_image0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_community_header"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_image0"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:text="和美女打电话的正确姿势"
            android:textColor="#FFF03F37"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_image0"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:text="美女教你如何打免费电话"
            android:textColor="#FF999999"
            android:textSize="12sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_recharge_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="#FFFFFFFF"
        android:padding="10dp">


        <ImageView
            android:id="@+id/iv_image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_community_header"/>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_image1"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:text="充话费"
            android:textColor="#FFF03F37"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text"
            android:layout_toRightOf="@+id/iv_image1"
            android:gravity="center_vertical"
            android:padding="6dp"
            android:text="拿到惠生活话费充值卡了？"
            android:textColor="#FF999999"
            android:textSize="12sp"/>
    </RelativeLayout>


    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0.5dp"
        android:layout_weight="1"
        app:columnCount="3"
        app:rowCount="4">

        <Button


            android:id="@+id/btn_1"
            style="@style/PhoneButtonStyle"
            android:text="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_2"

            style="@style/PhoneButtonStyle"
            android:text="2"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_3"
            style="@style/PhoneButtonStyle"
            android:text="3"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_4"
            style="@style/PhoneButtonStyle"
            android:text="4"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_5"
            style="@style/PhoneButtonStyle"
            android:text="5"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_6"
            style="@style/PhoneButtonStyle"
            android:text="6"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_7"
            style="@style/PhoneButtonStyle"
            android:text="7"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_8"
            style="@style/PhoneButtonStyle"
            android:text="8"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <Button
            android:id="@+id/btn_9"
            style="@style/PhoneButtonStyle"
            android:text="9"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <TextView
            android:id="@+id/tv_balance"
            style="@style/PhoneButtonStyle"
            android:background="#FFFFFFFF"

            android:lineSpacingExtra="2dp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"

            app:layout_rowWeight="1"
            tools:text="余额\n100"/>

        <Button
            android:id="@+id/btn_0"
            style="@style/PhoneButtonStyle"
            android:text="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

        <ImageButton
            android:id="@+id/ibtn_del"
            style="@style/PhoneButtonStyle"
            android:gravity="center"
            android:scaleType="center"
            android:src="@mipmap/ic_phone_del"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"/>

    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/btn_call"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@drawable/list_item_white_selector"
        android:drawableTop="@mipmap/ic_phone_call"
        android:gravity="center"
        android:padding="10dp"
        android:text="长按拨打本店号码预定"
        android:textColor="#FF666666"/>


</LinearLayout><!-- From: file:/D:/libo/android_studio_workspace/MM/app/src/main/res/layout/fragment_phone.xml -->