<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_gravity="center"
    android:paddingLeft="20dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/recycler_list_item_selector"
    tools:background="#FF000000">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:scaleType="fitEnd"
        android:src="@mipmap/ic_menu_select"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp"
        tools:text="精选"/>
</LinearLayout><!-- From: file:/D:/libo/android_studio_workspace/MM/app/src/main/res/layout/recycler_menu_list_item.xml -->