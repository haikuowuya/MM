<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:background="#FFEBEBEB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#FFFFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_goods_shoe_0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="10dp"
                android:textColor="#FF666666"
                android:text="时尚复古跑鞋"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:padding="10dp"
                android:text="￥128"
                android:textColor="#FFF43429"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_zambia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_name"
                android:drawableLeft="@mipmap/ic_zambia"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="88"
                android:textColor="#FF999999"
                android:textSize="12sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#FFE5E5E5"/>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout><!-- From: file:/D:/libo/android_studio_workspace/MM/app/src/main/res/layout/recycler_goods_grid_item.xml -->